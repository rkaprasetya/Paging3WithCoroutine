<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <style name="Text">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>
  <style name="Text.Title">
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text.Category">
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="textAllCaps">true</item>
  </style>
  <style name="Text.Item">
    <item name="android:textColor">@color/grey</item>
    <item name="textAllCaps">true</item>
  </style>
  <style name="Text.Number">
    <item name="android:textColor">@color/dark_grey</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text.Label">
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingTop">@dimen/default_padding_margin_small_x</item>
    <item name="android:paddingBottom">@dimen/default_padding_margin_small_x</item>
    <item name="android:paddingStart">@dimen/default_padding_margin</item>
    <item name="android:paddingEnd">@dimen/default_padding_margin</item>
    <item name="android:background">@drawable/custom_background_rectangle_blue</item>
  </style>
</resources>